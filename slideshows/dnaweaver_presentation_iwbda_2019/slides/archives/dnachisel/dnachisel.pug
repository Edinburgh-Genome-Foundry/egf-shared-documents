- var __dir = './slides/dnachisel/'
- var title = 'DNA Chisel: a versatile sequence optimizer'

each step in [0, 1, 2, 3, 4]
  .slide
    .header= title
    .content.vcenter: div
      p(class= step > 0 || 'hide') Design problems submitted to the Foundry:
      
      ul(class= step > 1 || 'hide'): li: i.
        I want to domesticate these genes for EMMA/sapiens. They should also pass
        the constraints of your synthesis company (no homopolymers, no hairpins, no
        repeats)
      
      ul(class= step > 2 || 'hide'): li: i.
        I want a 60,000bp sequence that is orthogonal to yeast, but same GC%
      
      ul(class= step > 3 || 'hide'): li: i.
        I want this 50,000bp chromosome segment, but freed from as
        many common 4bp restriction sites as possible. Conserve ORFs
        if possible.

each step in [0, 1, 2, 3, 4, 5]
  .slide
    .header= title
    .content.vcenter
      +stepSVG(step, __dir + "dnachisel_optimized.svg")
    if step === 5
      .slide-modal
        .vcenter
          center
            img(src=__dir + 'dnachisel-tweet.png' style='width: 50%;')